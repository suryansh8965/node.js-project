<%include ./partials/header.ejs%>
  <!-- Button trigger modal -->


  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Product Create Page</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/create/product" method="post"  enctype="multipart/form-data">
            <div class="mb-1">
              <label for="exampleInputEmail1" class="form-label">Product name</label>
              <input type="text" name="productname" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
            </div>
            <div class="mb-1">
              <label for="exampleInputEmail1" class="form-label">price</label>
              <input name="price" type="number" class="form-control" id="exampleInputEmail1"
                aria-describedby="emailHelp">

            </div>
            <div class="mb-1">
              <label for="exampleInputPassword1" class="form-label">description</label>
              <input type="text" name="des" class="form-control" id="exampleInputPassword1">
            </div>

            <div class="input-group mb-3">
              <input type="file" name="image" class="form-control" id="inputGroupFile01">
            </div>
            <div class="input-group mb-3">
              <input type="file" name="image" class="form-control" id="inputGroupFile01">
            </div>
            <div class="input-group mb-3">
              <input type="file" name="image" class="form-control" id="inputGroupFile01">
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-primary">Create Product</button>
            </div>
          </form>
        </div>

      </div>
    </div>
  </div>
  <div class="container mt-3">
    <h1 style="font-size: 2.5vw;">profile page</h1>
    <hr>
    <div class="container mt-2 d-flex">
      <button style="width: 100%;" type="button mt-3 d-flex " class="btn btn-danger">Your profile is incomplete.<a
          style="color: white;" href="/verified">verify your account</a> to get complete access.</button>
      <button style="background-color: rgb(8, 85, 8);" type="button" class="btn btn-danger"><a
          style="text-decoration: none; color: green;" href="/verified">verify</a></button>
    </div>

    <hr>
    <div class="card mb-3" style="max-width: 540px;">
      <div class="row g-0">
        <div class="col-md-4">
          <img style="width: 150px; height: 150px;"
            src="https://images.unsplash.com/photo-1674315364835-e8b8479e023b?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1374&q=80"
            class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">
                <!-- hello  -->
              <%=userdata.name%>
            </h5>
            <h1>
              <%=userdata.username%>
            </h1>
            <p class="card-text"><a style=" color: black;" href="">Edit your profile</a></p>
          </div>
        </div>
      </div>
    </div>
    <div class=" container d-flex">
      <button type="button" data-bs-toggle="modal" data-bs-target="#exampleModal" class="btn btn-primary"><a
          style="color: white; text-decoration: none;" href="#">+ Create new pooduct</a></button>
      <button style="margin-left: 1vw;" type="button" class="btn btn-secondary"><a
          style="color: white; text-decoration: none;" href="#">! updata old Product</a></button>
      <button type="button " style="margin-left: 1vw;" class="btn btn-success"><a
          style="color: white; text-decoration: none;" href="/mart">Show all product</a></button>
    </div>


    <h1 style="font-size: 2.5vw; margin-top: 2vw;">Recent Created Product</h1>
    <div class="container d-flex">
      <!-- <%%> -->
      <% userdata.products.forEach(function(pr){%>
      <div class="card" style="width: 18rem;">
        <div class="card-body">
       <h5>  <%=pr.productname%></h5>
          <h6 class="card-text"><%= pr.price%></h6>
          <p class="card-text"><%= pr.des%></p>
          <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
       
      </div>
      <%})%>
    </div>
  </div>
  </div>


  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
